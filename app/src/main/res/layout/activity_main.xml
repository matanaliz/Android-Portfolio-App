<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.udacity.matanaliz.portfolio.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/my_nanodegree_apps"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/CustomButton"
            android:text="@string/popular_movies"
            android:id="@+id/pop_movies_btn"
            android:onClick="runPopularMoviesApp" />

        <Button
            style="@style/CustomButton"
            android:text="@string/stock_hawk"
            android:id="@+id/stock_hawk_btn"
            android:onClick="runStockHawkApp" />

        <Button
            style="@style/CustomButton"
            android:text="@string/build_it_bigger"
            android:id="@+id/build_it_bigger_btn"
            android:onClick="runBuildItBiggerApp" />

        <Button
            style="@style/CustomButton"
            android:text="@string/make_your_app_material"
            android:id="@+id/app_material_btn"
            android:onClick="runMakeYourAppMaterialApp" />

        <Button
            style="@style/CustomButton"
            android:text="@string/go_ubiquitous"
            android:id="@+id/go_ubi_btn"
            android:onClick="runGoUbiquitousApp" />

        <Button
            style="@style/CustomButton"
            android:text="@string/capstone"
            android:id="@+id/capstone_btn"
            android:onClick="runCapstoneApp" />
    </LinearLayout>
</ScrollView>
